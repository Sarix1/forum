<strong>New User</strong>

<%= form_with scope: :user, url: users_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :password_digest %><br>
    <%= form.text_field :password_digest %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>