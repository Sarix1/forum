<%= form_for @topic do |form| %>
  <%= form.hidden_field :board_id, value: params[:board] %>
  <%= form.label :user_id %>
  <%= form.text_field :user_id %>
  <br>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <br>
  <%= form.label :content %>
  <%= form.text_field :content %>
  <br>
  <%= form.submit %>
<% end %>